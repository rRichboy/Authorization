<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        Width="300" Height="200" Title="Авторизация">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock TextAlignment ="Center" Text="Авторизация" FontWeight="Bold"/>
            <TextBlock Text="Логин:" FontWeight="Bold"/>
            <TextBox Watermark="Логин" Name="UsernameTextBox" Width="200"/>
            <TextBlock Text="Пароль:" FontWeight="Bold"/>
            <TextBox Watermark="Пароль" Name="PasswordTextBox" Width="200" PasswordChar="*"/>
            <Button Name="LoginButton" Content="Войти" Background="blue" Foreground="White" 
					HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
